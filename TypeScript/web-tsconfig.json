{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules"]
}
